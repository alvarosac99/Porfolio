---
import '@fontsource/jetbrains-mono';
import '@fontsource/ibm-plex-mono';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Álvaro Sebastián Acosta - Console Theme" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[var(--color-bg)] text-[var(--color-text)] font-body antialiased selection:bg-[var(--color-accent)] selection:text-[var(--color-bg)]">
        <div class="min-h-screen flex flex-col">
		    <slot />
        </div>
	</body>
</html>
