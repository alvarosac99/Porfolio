---
import '@fontsource/jetbrains-mono';
import '@fontsource/ibm-plex-mono';
import '../styles/global.css';
import BackgroundAnimation from '../components/BackgroundAnimation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Álvaro Sebastián Acosta" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/public/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Anti-flash: aplicar tema guardado antes de que el navegador pinte -->
		<script is:inline>
			(function () {
				const theme = localStorage.getItem('theme') || 'favorite-dark';
				document.documentElement.setAttribute('data-theme', theme);
			})();
		</script>
	</head>
	<body class="text-[var(--color-text)] font-body antialiased selection:bg-[var(--color-accent)] selection:text-[var(--color-bg)]">
        <BackgroundAnimation />
        <div class="min-h-screen flex flex-col relative z-10">
		    <slot />
        </div>
	</body>
</html>
