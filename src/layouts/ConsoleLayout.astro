---
import '@fontsource/jetbrains-mono';
import '@fontsource/ibm-plex-mono';
import '../styles/global.css';
import BackgroundAnimation from '../components/BackgroundAnimation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Álvaro Sebastián Acosta - Console Theme" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="text-[var(--color-text)] font-body antialiased selection:bg-[var(--color-accent)] selection:text-[var(--color-bg)]" style="background: linear-gradient(180deg, #1a1520 0%, #0c0c0c 24%);">
        <BackgroundAnimation />
        <div class="min-h-screen flex flex-col relative z-10">
		    <slot />
        </div>
	</body>
</html>
