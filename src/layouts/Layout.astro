---
import '@fontsource/jetbrains-mono';
import '@fontsource/ibm-plex-mono';
import '../styles/global.css';
import BackgroundAnimation from '../components/BackgroundAnimation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio de Álvaro Sebastián Acosta - Desarrollador Multiplataforma" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/public/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#0C0C0C] text-[#FFF5F0] font-body transition-colors duration-300 antialiased overflow-x-hidden w-full">
        <BackgroundAnimation />
        <div class="w-full relative">
		    <slot />
        </div>
	</body>
</html>
