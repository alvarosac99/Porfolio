<section id="projects" class="py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full">
    <!-- Header -->
    <div class="flex flex-col gap-3 mb-8">
        <div class="flex items-center gap-3">
            <span class="font-mono font-bold text-2xl md:text-3xl text-[#FF7A42]">&gt;</span>
            <h2 class="font-mono font-bold text-2xl md:text-[28px] text-[#FFF5F0]">proyectos</h2>
        </div>
        <p class="font-mono text-xs text-[#FF7A42] pl-1">
            $ ls ~/proyectos/
        </p>
    </div>

    <div class="flex flex-col gap-6">
        <!-- Row 1: Full Width Project (Proj 4) -->
        <div class="w-full border border-[#3D3048] backdrop-blur-sm group hover:border-[#FF7A42]/50 transition-colors" style="background-color: color-mix(in srgb, var(--color-surface), transparent 70%);">
            <div class="h-[200px] md:h-[300px] w-full bg-[#1A1520] relative overflow-hidden">
                <!-- Placeholder for Image -->
                <div class="absolute inset-0 flex items-center justify-center text-[#AE9EA8]/20 font-mono text-xl md:text-2xl">
                    IMG_PROJ_4
                </div>
            </div>
            <div class="p-6 flex flex-col gap-3">
                <h3 class="font-mono font-bold text-lg md:text-xl text-[#FFF5F0] mb-0 group-hover:text-[#FF7A42] transition-colors">Project_Alpha</h3>
                <p class="font-body text-sm text-[#AE9EA8]">Plataforma de gestión de tareas en tiempo real utilizando WebSockets.</p>
                <div class="flex gap-2 mt-2">
                    <span class="text-xs font-mono text-[#FF7A42] bg-[#FF7A42]/10 px-2 py-1">React</span>
                    <span class="text-xs font-mono text-[#FF7A42] bg-[#FF7A42]/10 px-2 py-1">Node.js</span>
                </div>
            </div>
        </div>

        <!-- Row 2: Split Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-[588px_1fr] gap-6">
            <!-- Proj 1 -->
            <div class="border border-[#3D3048] backdrop-blur-sm group hover:border-[#FF7A42]/50 transition-colors flex flex-col h-auto lg:h-[476px]" style="background-color: color-mix(in srgb, var(--color-surface), transparent 70%);">
                <div class="h-[200px] w-full bg-[#1A1520] relative overflow-hidden flex-shrink-0">
                     <div class="absolute inset-0 flex items-center justify-center text-[#AE9EA8]/20 font-mono text-xl md:text-2xl">
                        IMG_PROJ_1
                    </div>
                </div>
                <div class="p-6 flex flex-col gap-3 flex-grow">
                    <h3 class="font-mono font-bold text-lg md:text-xl text-[#FFF5F0] mb-0 group-hover:text-[#FF7A42] transition-colors">E-Commerce_Beta</h3>
                    <p class="font-body text-sm text-[#AE9EA8]">Tienda online completa con pasarela de pagos Stripe.</p>
                     <div class="flex gap-2 mt-auto">
                        <span class="text-xs font-mono text-[#FF7A42] bg-[#FF7A42]/10 px-2 py-1">Next.js</span>
                        <span class="text-xs font-mono text-[#FF7A42] bg-[#FF7A42]/10 px-2 py-1">Stripe</span>
                    </div>
                </div>
            </div>

            <!-- Proj 2 -->
            <div class="border border-[#3D3048] backdrop-blur-sm group hover:border-[#FF7A42]/50 transition-colors flex flex-col" style="background-color: color-mix(in srgb, var(--color-surface), transparent 70%);">
                <div class="h-[200px] w-full bg-[#1A1520] relative overflow-hidden flex-shrink-0">
                     <div class="absolute inset-0 flex items-center justify-center text-[#AE9EA8]/20 font-mono text-xl md:text-2xl">
                        IMG_PROJ_2
                    </div>
                </div>
                <div class="p-6 flex flex-col gap-3 flex-grow">
                    <h3 class="font-mono font-bold text-lg md:text-xl text-[#FFF5F0] mb-0 group-hover:text-[#FF7A42] transition-colors">Dev_Dashboard</h3>
                    <p class="font-body text-sm text-[#AE9EA8]">Dashboard analítico para desarrolladores.</p>
                     <div class="flex gap-2 mt-auto">
                        <span class="text-xs font-mono text-[#FF7A42] bg-[#FF7A42]/10 px-2 py-1">Vue.js</span>
                        <span class="text-xs font-mono text-[#FF7A42] bg-[#FF7A42]/10 px-2 py-1">Firebase</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
