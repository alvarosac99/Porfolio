<section id="education" class="py-16 px-4 md:px-12 lg:px-[120px] max-w-7xl mx-auto w-full">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-12">
        <span class="font-mono font-bold text-3xl text-[var(--color-accent)]">&gt;</span>
        <h2 class="font-mono font-bold text-[28px] text-[var(--color-text)]">educación</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Edu 1 (Active/Highlighted) -->
        <div class="p-6 border border-[var(--color-accent)] bg-[var(--color-accent)]/5 flex flex-col gap-4">
            <span class="font-mono text-xs text-[var(--color-accent)]">[grado superior]</span>
            <h3 class="font-mono font-bold text-base md:text-lg text-[var(--color-text)] leading-[1.3] max-w-full">desarrollo de aplicaciones multiplataforma</h3>
            <span class="font-mono text-xs md:text-[13px] text-[#8B939F]">i.e.s. pérez de ayala, oviedo</span>
        </div>

        <!-- Edu 2 -->
        <div class="p-6 border border-[#1E2028] hover:border-[#8B939F] transition-colors flex flex-col gap-4 bg-[var(--color-bg)]">
            <span class="font-mono text-xs text-[#8B939F]">[bachillerato]</span>
            <h3 class="font-mono font-bold text-base md:text-lg text-[var(--color-text)] leading-tight">bachillerato científico-tecnológico</h3>
            <span class="font-mono text-xs md:text-[13px] text-[#8B939F]">i.e.s. doctor fleming, oviedo</span>
        </div>
    </div>
</section>
