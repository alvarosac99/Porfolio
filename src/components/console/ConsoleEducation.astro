<section id="education" class="py-[60px] px-[120px] w-full border-t border-[var(--color-stroke)]">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-8">
        <span class="font-mono font-bold text-[32px] text-[var(--color-accent)]">&gt;</span>
        <h2 class="font-mono font-bold text-[28px] text-[var(--color-text)]">educación</h2>
    </div>

    <!-- Education Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Education 1 - DAM (Featured) -->
        <div class="flex flex-col gap-4 p-6 border border-[var(--color-accent)]">
            <span class="font-mono text-xs text-[var(--color-accent)]">[grado superior]</span>
            <h3 class="font-mono font-bold text-base text-[var(--color-text)] leading-[1.3]">Desarrollo de Aplicaciones Multiplataforma</h3>
            <p class="font-body text-[13px] text-[var(--color-text-muted)]">I.E.S. Doctor Fleming, Oviedo</p>
        </div>

        <!-- Education 2 - Bachillerato -->
        <div class="flex flex-col gap-4 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
            <span class="font-mono text-xs text-[var(--color-text-muted)]">[bachillerato]</span>
            <h3 class="font-mono font-bold text-base text-[var(--color-text)]">Bachillerato de Humanidades</h3>
            <p class="font-body text-[13px] text-[var(--color-text-muted)]">I.E.S. Pérez de Ayala, Oviedo</p>
        </div>
    </div>
</section>
