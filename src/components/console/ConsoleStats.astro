<section id="stats" class="py-16 px-4 md:px-12 lg:px-[120px] max-w-7xl mx-auto w-full">
    <div class="flex flex-col gap-6">
        <!-- Header -->
        <div class="flex items-center justify-between w-full">
             <span class="font-mono text-xs text-[#FAFAFA]">
                // métricas_personales
            </span>
        </div>

        <!-- Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Card 1 -->
            <div class="p-6 border border-[#1E2028] flex flex-col gap-3 bg-[var(--color-bg)] hover:border-[var(--color-accent)] transition-colors group">
                <span class="font-mono text-xs text-[var(--color-text-muted)]">años_experiencia</span>
                <span class="font-mono font-bold text-3xl text-[var(--color-text)]">1+</span>
                <span class="font-mono text-xs text-[var(--color-accent)]">++ formación continua</span>
            </div>

            <!-- Card 2 -->
            <div class="p-6 border border-[#1E2028] flex flex-col gap-3 bg-[var(--color-bg)] hover:border-[var(--color-accent)] transition-colors group">
                <span class="font-mono text-xs text-[var(--color-text-muted)]">tecnologías</span>
                <span class="font-mono font-bold text-3xl text-[var(--color-text)]">10+</span>
                <span class="font-mono text-xs text-[var(--color-accent)]">++ python, django, react, docker...</span>
            </div>

            <!-- Card 3 -->
            <div class="p-6 border border-[#1E2028] flex flex-col gap-3 bg-[var(--color-bg)] hover:border-[var(--color-accent)] transition-colors group">
                <span class="font-mono text-xs text-[var(--color-text-muted)]">servidores_activos</span>
                <span class="font-mono font-bold text-3xl text-[var(--color-text)]">1 VPS</span>
                <span class="font-mono text-xs text-[var(--color-accent)]">++ minecraft + web + más</span>
            </div>
        </div>
    </div>
</section>
