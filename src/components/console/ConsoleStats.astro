<section id="stats" class="py-[60px] px-[120px] w-full">
    <div class="flex flex-col gap-8 w-full">
        <!-- Header -->
        <div class="flex items-center justify-between w-full">
            <h2 class="font-mono text-xs text-[var(--color-text-title)]">// métricas_personales</h2>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full">
            <!-- Card 1: Proyectos -->
            <div class="flex flex-col gap-3 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-baseline gap-2">
                    <span class="font-mono text-4xl font-bold text-[var(--color-accent)]">15+</span>
                    <span class="font-mono text-sm text-[var(--color-text-muted)]">proyectos</span>
                </div>
                <p class="font-body text-sm text-[var(--color-text-muted)] leading-relaxed">
                    desarrollados y desplegados en producción
                </p>
            </div>

            <!-- Card 2: Experiencia -->
            <div class="flex flex-col gap-3 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-baseline gap-2">
                    <span class="font-mono text-4xl font-bold text-[var(--color-accent)]">3+</span>
                    <span class="font-mono text-sm text-[var(--color-text-muted)]">años</span>
                </div>
                <p class="font-body text-sm text-[var(--color-text-muted)] leading-relaxed">
                    de experiencia en desarrollo multiplataforma
                </p>
            </div>

            <!-- Card 3: Tecnologías -->
            <div class="flex flex-col gap-3 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-baseline gap-2">
                    <span class="font-mono text-4xl font-bold text-[var(--color-accent)]">20+</span>
                    <span class="font-mono text-sm text-[var(--color-text-muted)]">tecnologías</span>
                </div>
                <p class="font-body text-sm text-[var(--color-text-muted)] leading-relaxed">
                    dominadas entre lenguajes y frameworks
                </p>
            </div>
        </div>
    </div>
</section>
