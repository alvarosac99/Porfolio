<section id="stats" class="py-[60px] px-[120px] w-full">
    <div class="flex flex-col gap-8 w-full">
        <!-- Header -->
        <div class="flex items-center justify-between w-full">
            <h2 class="font-mono text-xs text-[var(--color-text-title)]">// métricas_personales</h2>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 w-full">
            <!-- Card 1: Años Experiencia -->
            <div class="flex flex-col gap-3 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <span class="font-mono text-xs text-[var(--color-text-muted)]">años_experiencia</span>
                <span class="font-mono text-[32px] font-bold text-[var(--color-text)]">1+</span>
                <span class="font-body text-xs text-[var(--color-accent)]">++ formación continua</span>
            </div>

            <!-- Card 2: Tecnologías -->
            <div class="flex flex-col gap-3 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <span class="font-mono text-xs text-[var(--color-text-muted)]">tecnologías</span>
                <span class="font-mono text-[32px] font-bold text-[var(--color-text)]">10+</span>
                <span class="font-body text-xs text-[var(--color-accent)]">++ python, django, react, docker...</span>
            </div>

            <!-- Card 3: Servidores Activos -->
            <div class="flex flex-col gap-3 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <span class="font-mono text-xs text-[var(--color-text-muted)]">servidores_activos</span>
                <span class="font-mono text-[32px] font-bold text-[var(--color-text)]">1 VPS</span>
                <span class="font-body text-xs text-[var(--color-accent)]">++ minecraft + web + más</span>
            </div>
        </div>
    </div>
</section>
