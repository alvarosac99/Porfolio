---

<section id="skills" class="py-[60px] px-[120px] w-full border-t border-[var(--color-stroke)]">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-8">
        <span class="font-mono font-bold text-[32px] text-[var(--color-accent)]">&gt;</span>
        <h2 class="font-mono font-bold text-[28px] text-[var(--color-text)]">aptitudes</h2>
    </div>

    <!-- Skills Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-[624px_1fr] gap-6">
        <!-- Left Column -->
        <div class="flex flex-col gap-4">
            <!-- Backend Development -->
            <div class="flex flex-col gap-4 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-center gap-2">
                    <span class="font-mono font-bold text-lg text-[var(--color-text)]">backend_dev</span>
                    <div class="h-px flex-1 bg-[var(--color-stroke)]"></div>
                </div>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Python</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Java</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">PHP</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Django</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Spring Boot</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Node.js</span>
                </div>
            </div>

            <!-- Frontend Development -->
            <div class="flex flex-col gap-4 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-center gap-2">
                    <span class="font-mono font-bold text-lg text-[var(--color-text)]">frontend_dev</span>
                    <div class="h-px flex-1 bg-[var(--color-stroke)]"></div>
                </div>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">React</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Vue.js</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Next.js</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">TypeScript</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Tailwind CSS</span>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="flex flex-col gap-4">
            <!-- DevOps & Infrastructure -->
            <div class="flex flex-col gap-4 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-center gap-2">
                    <span class="font-mono font-bold text-lg text-[var(--color-text)]">devops</span>
                    <div class="h-px flex-1 bg-[var(--color-stroke)]"></div>
                </div>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Docker</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Linux</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Git</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">CI/CD</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Nginx</span>
                </div>
            </div>

            <!-- Databases -->
            <div class="flex flex-col gap-4 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
                <div class="flex items-center gap-2">
                    <span class="font-mono font-bold text-lg text-[var(--color-text)]">databases</span>
                    <div class="h-px flex-1 bg-[var(--color-stroke)]"></div>
                </div>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">PostgreSQL</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">MySQL</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">MongoDB</span>
                    <span class="px-3 py-1.5 bg-[var(--color-accent)]/10 border border-[var(--color-accent)]/30 rounded font-mono text-xs text-[var(--color-text)]">Redis</span>
                </div>
            </div>
        </div>
    </div>
</section>
