---
import ThemeTrigger from './ThemeTrigger.astro';
import ThemeDropdown from './ThemeDropdown.astro';
---

<header class="h-[72px] border-b border-[var(--color-stroke)] bg-[var(--color-bg)] sticky top-0 z-50 px-[60px] flex items-center justify-between w-full">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
        <span class="font-mono font-bold text-2xl text-[var(--color-accent)]">&gt;</span>
        <span class="font-mono font-medium text-lg text-[var(--color-text)]">sebas</span>
    </a>

    <!-- Nav & Actions -->
    <div class="flex items-center gap-8">
        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center gap-8">
            <a href="#about" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">sobre_mí</a>
            <a href="#projects" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">proyectos</a>
            <a href="#experience" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">experiencia</a>
            <a href="#skills" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">aptitudes</a>
            <a href="#contact" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">contacto</a>
        </nav>

        <!-- CTA & Theme -->
        <div class="hidden md:flex items-center gap-4">
            <a href="#contact" class="flex items-center justify-center bg-[var(--color-accent)] px-5 py-2.5 hover:opacity-90 transition-opacity">
                <span class="font-mono font-medium text-xs text-[#0D0B0E]">$ contactar</span>
            </a>
            
            <div class="border-l border-[var(--color-stroke)] pl-4 h-6 flex items-center relative">
                <ThemeTrigger />
                <ThemeDropdown />
            </div>
        </div>

        <!-- Mobile Menu Button -->
        <button
            id="mobile-menu-btn"
            type="button"
            class="inline-flex md:hidden items-center justify-center p-2 text-[var(--color-text)] hover:text-[var(--color-accent)] focus:outline-none transition-colors"
            aria-label="Abrir menú"
        >
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>
</header>

<script>
    const btn = document.getElementById('mobile-menu-btn');
    btn?.addEventListener('click', () => {
        // Mobile menu functionality can be added here
        console.log('Mobile menu clicked');
    });
</script>
