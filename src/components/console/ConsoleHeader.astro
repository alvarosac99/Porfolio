---
import ThemeSwitcher from '../ThemeSwitcher.astro';
---

<header class="h-[72px] border-b border-[var(--color-stroke)] bg-[var(--color-bg)] sticky top-0 z-50 px-4 md:px-12 lg:px-[60px] flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
        <span class="font-mono font-bold text-2xl text-[var(--color-accent)]">&gt;</span>
        <span class="font-mono font-medium text-lg text-[var(--color-text)]">sebas</span>
    </a>

    <!-- Nav & Actions -->
    <div class="flex items-center gap-8">
        <!-- Desktop Nav -->
        <nav class="hidden md:flex items-center gap-8">
            <a href="#about" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">sobre_m√≠</a>
            <a href="#projects" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">proyectos</a>
            <a href="#experience" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">experiencia</a>
            <a href="#skills" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">aptitudes</a>
            <a href="#contact" class="font-mono text-[13px] text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors">contacto</a>
        </nav>

        <!-- CTA & Theme -->
        <div class="flex items-center gap-4">
            <a href="#contact" class="hidden md:flex items-center justify-center bg-[var(--color-accent)] px-5 py-2.5 hover:opacity-90 transition-opacity">
                <span class="font-mono font-medium text-xs text-[#0A0A0A]">$ contactar</span>
            </a>
            
            <div class="border-l border-[var(--color-stroke)] pl-4 h-6 flex items-center">
                 <!-- Theme Trigger Placeholder (Simulation) -->
                <button class="flex items-center gap-1.5 px-3 py-1.5 rounded bg-[#141418] border border-[var(--color-stroke)]">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#8B939F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="13.5" cy="6.5" r=".5"/><palette class="lucide lucide-palette"/><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
                    <!-- Icon replaced with simple palette for now -->
                     <span class="font-mono text-[11px] text-[#8B939F]">console</span>
                </button>
            </div>
        </div>
    </div>
</header>
