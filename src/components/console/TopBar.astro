<header class="h-[56px] border-b border-[var(--color-stroke)] bg-[var(--color-bg)] sticky top-0 z-50 px-4 md:px-12 lg:px-[60px] flex items-center justify-between">
    <!-- Left: Back + Breadcrumbs -->
    <div class="flex items-center gap-3">
        <!-- Back Button -->
        <a href="#" class="flex items-center gap-1.5 px-3.5 py-2 rounded-md border border-[var(--color-stroke)] hover:bg-[var(--color-stroke)]/50 transition-colors group">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" class="stroke-[#8B939F] group-hover:stroke-[var(--color-text)] transition-colors" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
            <span class="font-mono text-xs text-[#8B939F] group-hover:text-[var(--color-text)] transition-colors">volver</span>
        </a>

        <!-- Breadcrumb -->
        <nav class="hidden sm:flex items-center gap-1.5 ml-1">
            <span class="font-mono text-xs text-[#8B939F]">proyectos</span>
            <span class="font-mono text-xs text-[#555555]">/</span>
            <span class="font-mono text-xs font-medium text-[var(--color-accent)]">games</span>
        </nav>
    </div>

    <!-- Right: Actions -->
    <div class="flex items-center gap-3">
        <!-- Repo Button -->
        <a href="#" class="flex items-center gap-1.5 px-3.5 py-2 rounded-md border border-[var(--color-stroke)] hover:bg-[var(--color-stroke)]/50 transition-colors group">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" class="stroke-[#8B939F] group-hover:stroke-[var(--color-text)] transition-colors" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 6 3 6 6-6 6-6 0 0-0-2 0-2 2-2 3-2 3 .5.5 1 1 1.5.5.5-1.5 1-1.5 2 .5 1 .5 1 2 2 3-1.5 1-2 2-2 2-1 2-1 3-1 4-1 5 1.5 6 1.5 6"/></svg>
            <span class="font-mono text-xs text-[#8B939F] group-hover:text-[var(--color-text)] transition-colors">repositorio</span>
        </a>

        <!-- Web Button -->
        <a href="#" class="flex items-center gap-1.5 px-3.5 py-2 rounded-md bg-[var(--color-accent)] hover:opacity-90 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="#0A0A0A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
            <span class="font-mono text-xs font-medium text-[#0A0A0A]">ver sitio web</span>
        </a>
    </div>
</header>
