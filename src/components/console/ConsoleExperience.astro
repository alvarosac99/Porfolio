<section id="experience" class="py-8 md:py-[60px] px-5 md:px-[120px] w-full border-t border-[var(--color-stroke)]">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-8">
        <span class="font-mono font-bold text-[32px] text-[var(--color-accent)]">&gt;</span>
        <h2 class="font-mono font-bold text-[28px] text-[var(--color-text)]">experiencia</h2>
    </div>

    <!-- Experience Items -->
    <div class="flex flex-col gap-4">
        <!-- Experience 1 (Active) - CastroAlonso -->
        <div class="flex flex-col md:flex-row gap-4 md:gap-6 p-6 border border-[var(--color-accent)] backdrop-blur-sm" style="background-color: color-mix(in srgb, var(--color-surface), transparent 40%);">
            <div class="flex flex-row md:flex-col justify-between md:justify-start gap-1 w-full md:w-[200px] flex-shrink-0">
                <span class="font-mono text-xs text-[var(--color-accent)]">2025 — actualidad</span>
                <span class="font-body text-xs text-[var(--color-text-muted)]">gijón, asturias</span>
            </div>
            <div class="flex flex-col gap-3 flex-1">
                <h3 class="font-mono font-bold text-base text-[var(--color-text)]">castroalonso | consultor ti</h3>
                <p class="font-body text-[13px] text-[var(--color-text-muted)] leading-[1.6]">
                    // mantenimiento y soporte técnico · edición audiovisual corporativa · desarrollo ERP (dolibarr) · gestión de máquinas virtuales · ciberseguridad y mejora de procesos
                </p>
                <span class="font-mono text-xs text-[var(--color-accent)]">[activo]</span>
            </div>
        </div>

        <!-- Experience 2 - Hostelería & Construcción -->
        <div class="flex flex-col md:flex-row gap-4 md:gap-6 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors backdrop-blur-sm" style="background-color: color-mix(in srgb, var(--color-surface), transparent 70%);">
            <div class="flex flex-row md:flex-col justify-between md:justify-start gap-1 w-full md:w-[200px] flex-shrink-0">
                <span class="font-mono text-xs text-[#F472B6]">2022 — 2024</span>
                <span class="font-body text-xs text-[var(--color-text-muted)]">asturias</span>
            </div>
            <div class="flex flex-col gap-3 flex-1">
                <h3 class="font-mono font-bold text-base text-[var(--color-text)]">hostelería &amp; construcción</h3>
                <p class="font-body text-[13px] text-[var(--color-text-muted)] leading-[1.6]">
                    // trabajo en equipo, capacidad de adaptación, responsabilidad y resiliencia adquiridas en entornos laborales exigentes
                </p>
                <span class="font-mono text-xs text-[var(--color-text-muted)]">[completado]</span>
            </div>
        </div>
    </div>
</section>
