<section id="experience" class="py-[60px] px-[120px] w-full border-t border-[var(--color-stroke)]">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-8">
        <span class="font-mono font-bold text-[32px] text-[var(--color-accent)]">&gt;</span>
        <h2 class="font-mono font-bold text-[28px] text-[var(--color-text)]">experiencia</h2>
    </div>

    <!-- Experience Items -->
    <div class="flex flex-col gap-4">
        <!-- Experience 1 (Active) -->
        <div class="flex flex-col gap-6 p-6 border border-[var(--color-accent)]">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                <div class="flex flex-col gap-2">
                    <h3 class="font-mono font-bold text-xl text-[var(--color-text)]">consultor TI</h3>
                    <p class="font-mono text-sm text-[var(--color-accent)]">@ castroalonso</p>
                </div>
                <div class="flex items-center gap-2">
                    <span class="font-mono text-xs text-[var(--color-text-muted)]">2023 - presente</span>
                    <span class="px-2 py-1 bg-[var(--color-accent)]/10 border border-[var(--color-accent)] rounded font-mono text-[10px] text-[var(--color-accent)]">ACTUAL</span>
                </div>
            </div>
            <ul class="list-none space-y-2 font-body text-sm text-[var(--color-text-muted)] leading-relaxed">
                <li class="flex gap-2">
                    <span class="text-[var(--color-accent)] flex-shrink-0">→</span>
                    <span>desarrollo y mantenimiento de aplicaciones web empresariales</span>
                </li>
                <li class="flex gap-2">
                    <span class="text-[var(--color-accent)] flex-shrink-0">→</span>
                    <span>gestión de servidores linux y contenedores docker</span>
                </li>
                <li class="flex gap-2">
                    <span class="text-[var(--color-accent)] flex-shrink-0">→</span>
                    <span>consultoría técnica y soporte a clientes</span>
                </li>
            </ul>
        </div>

        <!-- Experience 2 -->
        <div class="flex flex-col gap-6 p-6 border border-[var(--color-stroke)] hover:border-[var(--color-accent)] transition-colors">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                <div class="flex flex-col gap-2">
                    <h3 class="font-mono font-bold text-xl text-[var(--color-text)]">desarrollador fullstack</h3>
                    <p class="font-mono text-sm text-[var(--color-accent)]">@ freelance</p>
                </div>
                <span class="font-mono text-xs text-[var(--color-text-muted)]">2021 - 2023</span>
            </div>
            <ul class="list-none space-y-2 font-body text-sm text-[var(--color-text-muted)] leading-relaxed">
                <li class="flex gap-2">
                    <span class="text-[var(--color-accent)] flex-shrink-0">→</span>
                    <span>desarrollo de aplicaciones web y móviles para diversos clientes</span>
                </li>
                <li class="flex gap-2">
                    <span class="text-[var(--color-accent)] flex-shrink-0">→</span>
                    <span>implementación de apis rest y microservicios</span>
                </li>
                <li class="flex gap-2">
                    <span class="text-[var(--color-accent)] flex-shrink-0">→</span>
                    <span>diseño y desarrollo de interfaces de usuario modernas</span>
                </li>
            </ul>
        </div>
    </div>
</section>
