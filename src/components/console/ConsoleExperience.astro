<section id="experience" class="py-16 px-4 md:px-12 lg:px-[120px] max-w-7xl mx-auto w-full">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-12">
        <span class="font-mono font-bold text-3xl text-[var(--color-accent)]">&gt;</span>
        <h2 class="font-mono font-bold text-[28px] text-[var(--color-text)]">experiencia</h2>
    </div>

    <div class="flex flex-col gap-6">
        <!-- Exp 1 (Active) -->
        <div class="flex flex-col md:flex-row gap-6 p-6 border border-[var(--color-accent)] bg-[var(--color-accent)]/5 w-full">
            <div class="md:w-[200px] flex-shrink-0 flex flex-col gap-1">
                <span class="font-mono text-xs text-[var(--color-accent)] block">2023 - Presente</span>
                <span class="font-mono text-sm font-bold text-[var(--color-text)]">Tech Solutions Inc.</span>
            </div>
            <div class="flex-grow flex flex-col gap-3">
                <h3 class="font-mono font-bold text-lg text-[var(--color-accent)] mb-0">Senior Full Stack Developer</h3>
                <p class="font-body text-sm text-[var(--color-text-muted)] leading-relaxed">
                    Liderazgo técnico en proyectos de migración a arquitectura de microservicios. Implementación de CI/CD pipelines y mejora del rendimiento en aplicaciones React.
                </p>
                <div class="mt-0 flex flex-wrap gap-2">
                     <span class="text-[10px] font-mono border border-[var(--color-accent)]/30 text-[var(--color-accent)] px-1.5 py-0.5">React</span>
                     <span class="text-[10px] font-mono border border-[var(--color-accent)]/30 text-[var(--color-accent)] px-1.5 py-0.5">AWS</span>
                </div>
            </div>
        </div>

        <!-- Exp 2 -->
        <div class="flex flex-col md:flex-row gap-6 p-6 border border-[#1E2028] hover:border-[#8B939F] transition-colors w-full">
            <div class="md:w-[200px] flex-shrink-0 flex flex-col gap-1">
                <span class="font-mono text-xs text-[#8B939F] block">2021 - 2023</span>
                <span class="font-mono text-sm font-bold text-[#8B939F]">Digital Agency</span>
            </div>
            <div class="flex-grow flex flex-col gap-3">
                <h3 class="font-mono font-bold text-lg text-[#FAFAFA] mb-0">Desarrollador Web Full Stack</h3>
                <p class="font-body text-sm text-[#8B939F] leading-relaxed">
                    Desarrollo de sitios e-commerce con Shopify y soluciones a medida usando MERN stack. Colaboración directa con clientes.
                </p>
            </div>
        </div>
    </div>
</section>
