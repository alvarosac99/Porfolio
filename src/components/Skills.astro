<section id="skills" class="py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full bg-[#1A1520]/20">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-8 md:mb-12">
        <span class="font-mono font-bold text-2xl md:text-3xl text-[#FF7A42]">&gt;</span>
        <h2 class="font-mono font-bold text-2xl md:text-[28px] text-[#FFF5F0]">aptitudes</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-[2fr_1fr] gap-8 md:gap-12">
        <!-- Col 1: Technical Skills -->
        <div class="flex flex-col gap-6">
            <h3 class="font-mono text-xs text-[#FFF8F2] mb-0">// técnicas</h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                 <!-- Backend Box -->
                <div class="p-6 border border-[#3D3048] hover:border-[#FF7A42]/50 transition-colors flex flex-col gap-4">
                    <h4 class="font-mono font-bold text-base text-[#FFF5F0] mb-0">Backend & Systems</h4>
                    <ul class="space-y-2 text-sm font-mono text-[#AE9EA8]">
                        <li><span class="text-[#FF7A42]">▹</span> Python (Django/FastAPI)</li>
                        <li><span class="text-[#FF7A42]">▹</span> Node.js / Express</li>
                        <li><span class="text-[#FF7A42]">▹</span> PostgreSQL / MongoDB</li>
                        <li><span class="text-[#FF7A42]">▹</span> Docker / Kubernetes</li>
                    </ul>
                </div>

                <!-- Frontend Box -->
                <div class="p-6 border border-[#3D3048] hover:border-[#FF7A42]/50 transition-colors flex flex-col gap-4">
                    <h4 class="font-mono font-bold text-base text-[#FFF5F0] mb-0">Frontend</h4>
                    <ul class="space-y-2 text-sm font-mono text-[#AE9EA8]">
                        <li><span class="text-[#FF7A42]">▹</span> React / Next.js</li>
                        <li><span class="text-[#FF7A42]">▹</span> Astro</li>
                        <li><span class="text-[#FF7A42]">▹</span> TailwindCSS</li>
                        <li><span class="text-[#FF7A42]">▹</span> TypeScript</li>
                    </ul>
                </div>

                 <!-- Tools Box (Full width in col) -->
                <div class="p-6 border border-[#3D3048] hover:border-[#FF7A42]/50 transition-colors md:col-span-2 flex flex-col gap-4">
                    <h4 class="font-mono font-bold text-base text-[#FFF5F0] mb-0">Herramientas & DevOps</h4>
                    <div class="flex flex-wrap gap-3">
                        <span class="px-2 py-1 bg-[#0C0C0C] border border-[#AE9EA8]/20 text-xs font-mono text-[#AE9EA8]">Git</span>
                        <span class="px-2 py-1 bg-[#0C0C0C] border border-[#AE9EA8]/20 text-xs font-mono text-[#AE9EA8]">Linux</span>
                        <span class="px-2 py-1 bg-[#0C0C0C] border border-[#AE9EA8]/20 text-xs font-mono text-[#AE9EA8]">AWS</span>
                        <span class="px-2 py-1 bg-[#0C0C0C] border border-[#AE9EA8]/20 text-xs font-mono text-[#AE9EA8]">Figma</span>
                        <span class="px-2 py-1 bg-[#0C0C0C] border border-[#AE9EA8]/20 text-xs font-mono text-[#AE9EA8]">CI/CD</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Col 2: Personal Skills -->
        <div class="flex flex-col gap-6">
            <h3 class="font-mono text-xs text-[#FFF8F2] mb-0">// personales</h3>
             
            <div class="p-6 border border-[#3D3048] hover:border-[#FF7A42]/50 transition-colors h-full flex flex-col gap-4">
                <ul class="space-y-4 text-sm font-mono text-[#AE9EA8]">
                    <li class="flex items-start gap-2">
                        <span class="text-[#FF7A42]">▹</span>
                        <span>Comunicación efectiva</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-[#FF7A42]">▹</span>
                        <span>Trabajo en equipo</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-[#FF7A42]">▹</span>
                        <span>Resolución de problemas</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <span class="text-[#FF7A42]">▹</span>
                        <span>Adaptabilidad</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
